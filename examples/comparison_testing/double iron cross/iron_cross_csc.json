{
  "meta": {
    "version": 0,
    "name": "IronCross - Pass 5, Field 5, Place 5/6/8 (10/12/12)"
  },
  "table": { "bubble": false, "level": 10 },
  "variables": {
    "pass_amt": 5,
    "field_amt": 5,
    "p5": 10,
    "p6": 12,
    "p8": 12,
    "mode": "Main"
  },
  "modes": {
    "CorePlaces": { "template": { "place_5": "p5", "place_6": "p6", "place_8": "p8" } },
    "ComeoutPass": { "template": { "pass": "pass_amt" } },
    "FieldOnly":  { "template": { "field": "field_amt" } }
  },
  "rules": [
    { "on": { "event": "comeout" },        "do": ["apply_template('CorePlaces')", "apply_template('ComeoutPass')", "apply_template('FieldOnly')"] },
    { "on": { "event": "point_set" },       "do": ["apply_template('CorePlaces')"] },
    { "on": { "event": "roll_resolved" },   "do": ["apply_template('FieldOnly')"] }
  ]
}