{
  "meta": { "name": "Martingale Pass (example)", "version": 0 },
  "table": { "bubble": false, "level": 10, "odds_policy": "3-4-5x" },
  "variables": { "base_units": 10, "units": 10, "cap_mult": 4, "mode": "Main" },
  "modes": {
    "Main": {
      "template": {
        "pass_line": "units"
      }
    }
  },
  "rules": [
    { "on": { "event": "comeout" }, "do": [ "apply_template('Main')" ] },

    { "on": { "event": "bet_resolved", "bet": "pass", "result": "lose" },
      "do": [ "units += base_units", "apply_template('Main')" ] },

    { "on": { "event": "bet_resolved", "bet": "pass", "result": "win" },
      "do": [ "units = base_units", "apply_template('Main')" ] }
  ]
}